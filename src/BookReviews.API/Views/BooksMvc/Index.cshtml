@using BookReviews.Application.Common.Models
@using BookReviews.Application.Features.Books.Dtos
@model PagedResponse<BookDto>

@{
    ViewData["Title"] = "Books List";
    var totalPages = (int)Math.Ceiling(Model.TotalCount / (double)Model.PageSize);
    var currentGenre = Context.Request.Query["Genre"].ToString();
    var currentYear = Context.Request.Query["PublishedYear"].ToString();
    var currentRating = Context.Request.Query["MinRating"].ToString();
    var currentTitle = Context.Request.Query["Title"].ToString();
    var currentAuthor = Context.Request.Query["Author"].ToString();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>All Books</h1>
    <a href="/books/create" class="btn btn-primary">Add New Book</a>
</div>

<!-- Filter Form -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            üîç Filter Books
        </h5>
    </div>
    <div class="card-body">
        <form method="get" action="/books">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="Title" class="form-label">Title</label>
                    <input type="text" name="Title" id="Title" class="form-control" 
                           value="@currentTitle" placeholder="Search by title..." />
                </div>
                
                <div class="col-md-3">
                    <label for="Author" class="form-label">Author</label>
                    <input type="text" name="Author" id="Author" class="form-control" 
                           value="@currentAuthor" placeholder="Search by author..." />
                </div>
                
                <div class="col-md-2">
                    <label for="Genre" class="form-label">Genre</label>
                    <select name="Genre" id="Genre" class="form-select">
                        <option value="">All Genres</option>
                        <option value="Fiction" selected="@(currentGenre == "Fiction")">Fiction</option>
                        <option value="Non-Fiction" selected="@(currentGenre == "Non-Fiction")">Non-Fiction</option>
                        <option value="Science Fiction" selected="@(currentGenre == "Science Fiction")">Science Fiction</option>
                        <option value="Fantasy" selected="@(currentGenre == "Fantasy")">Fantasy</option>
                        <option value="Mystery" selected="@(currentGenre == "Mystery")">Mystery</option>
                        <option value="Thriller" selected="@(currentGenre == "Thriller")">Thriller</option>
                        <option value="Romance" selected="@(currentGenre == "Romance")">Romance</option>
                        <option value="Horror" selected="@(currentGenre == "Horror")">Horror</option>
                        <option value="Biography" selected="@(currentGenre == "Biography")">Biography</option>
                        <option value="History" selected="@(currentGenre == "History")">History</option>
                    </select>
                </div>
                
                <div class="col-md-2">
                    <label for="PublishedYear" class="form-label">Year</label>
                    <input type="number" name="PublishedYear" id="PublishedYear" class="form-control" 
                           value="@currentYear" 
                           placeholder="e.g., 2024" min="1000" max="@DateTime.Now.Year" />
                </div>
                
                <div class="col-md-2">
                    <label for="MinRating" class="form-label">Min Rating</label>
                    <select name="MinRating" id="MinRating" class="form-select">
                        <option value="">Any Rating</option>
                        <option value="5" selected="@(currentRating == "5")">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê (5)</option>
                        <option value="4" selected="@(currentRating == "4")">‚≠ê‚≠ê‚≠ê‚≠ê (4+)</option>
                        <option value="3" selected="@(currentRating == "3")">‚≠ê‚≠ê‚≠ê (3+)</option>
                        <option value="2" selected="@(currentRating == "2")">‚≠ê‚≠ê (2+)</option>
                        <option value="1" selected="@(currentRating == "1")">‚≠ê (1+)</option>
                    </select>
                </div>
            </div>
            
            <div class="row mt-3">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        üîç Apply Filters
                    </button>
                    <a href="/books" class="btn btn-outline-secondary">
                        ‚úñ Clear Filters
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Active Filters Display -->
@{
    var hasFilters = !string.IsNullOrEmpty(currentTitle) ||
                     !string.IsNullOrEmpty(currentAuthor) ||
                     !string.IsNullOrEmpty(currentGenre) ||
                     !string.IsNullOrEmpty(currentYear) ||
                     !string.IsNullOrEmpty(currentRating);
}

@if (hasFilters)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong>Active Filters:</strong>
        @if (!string.IsNullOrEmpty(currentTitle))
        {
            <span class="badge bg-primary">Title: @currentTitle</span>
        }
        @if (!string.IsNullOrEmpty(currentAuthor))
        {
            <span class="badge bg-primary">Author: @currentAuthor</span>
        }
        @if (!string.IsNullOrEmpty(currentGenre))
        {
            <span class="badge bg-primary">Genre: @currentGenre</span>
        }
        @if (!string.IsNullOrEmpty(currentYear))
        {
            <span class="badge bg-primary">Year: @currentYear</span>
        }
        @if (!string.IsNullOrEmpty(currentRating))
        {
            <span class="badge bg-primary">Min Rating: @currentRating+</span>
        }
    </div>
}

<!-- Results Summary -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <strong>@Model.TotalCount</strong> books found
        @if (hasFilters)
        {
            <span class="text-muted">(filtered)</span>
        }
    </div>
    <div class="text-muted">
        Showing @((Model.PageNumber - 1) * Model.PageSize + 1) - @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount) of @Model.TotalCount
    </div>
</div>

@if (Model.Items.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Year</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Items)
            {
                <tr>
                    <td><strong>@book.Title</strong></td>
                    <td>@book.Author</td>
                    <td><span class="badge bg-info text-dark">@book.Genre</span></td>
                    <td>@book.PublishedYear</td>
                    <td>
                        <a href="/books/details/@book.Id" class="btn btn-sm btn-info">Reviews</a>
                        <a href="/books/edit/@book.Id" class="btn btn-sm btn-warning">Edit</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        <h5 class="alert-heading">No books found</h5>
        <p>
            @if (hasFilters)
            {
                <text>Try adjusting your filters or <a href="/books" class="alert-link">clear all filters</a>.</text>
            }
            else
            {
                <text>There are no books in the library yet. <a href="/books/create" class="alert-link">Add the first book!</a></text>
            }
        </p>
    </div>
}

<!-- Pagination -->
@if (totalPages > 1)
{
    <div class="d-flex justify-content-center mt-4">
        <nav aria-label="Books pagination">
            <ul class="pagination">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="?pageNumber=@(Model.PageNumber - 1)&Title=@currentTitle&Author=@currentAuthor&Genre=@currentGenre&PublishedYear=@currentYear&MinRating=@currentRating">
                            Previous
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                }
                
                @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(totalPages, Model.PageNumber + 2); i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <li class="page-item active">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="?pageNumber=@i&Title=@currentTitle&Author=@currentAuthor&Genre=@currentGenre&PublishedYear=@currentYear&MinRating=@currentRating">
                                @i
                            </a>
                        </li>
                    }
                }
                
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="?pageNumber=@(Model.PageNumber + 1)&Title=@currentTitle&Author=@currentAuthor&Genre=@currentGenre&PublishedYear=@currentYear&MinRating=@currentRating">
                            Next
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Next</span>
                    </li>
                }
            </ul>
        </nav>
    </div>
}